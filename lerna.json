{
  "packages": [
    "packages/*"
  ],
  "version": "1.0.2",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "message": "publish: versions update"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock",
        "--unsafe-perm=true",
        "--no-optional"
      ]
    }
  }
}